<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name="VO.AddStaffVO" table="AddStaff">
   
   	<id name="staffId" type="int" column="staffId" >
   		<generator class="increment"/>
  	</id>

	<property name="name">
	  		<column name="name"/>
  	</property>
  
  <property name="email">
  		<column name="email"/>
  	</property>
  
  	<property name="gender">
   		<column name="gender" />
  	</property>
  
  <property name="dateofbirth">
  		<column name="dateofbirth"/>
  	</property>
  	
  	<property name="phoneno">
  		<column name="phoneno"/>
  	</property>
  	
  	<property name="address">
  		<column name="address"/>
  	</property>
  	
  	<property name="post">
  		<column name="post"/>
  	</property>
  	
 </class>

</hibernate-mapping>
